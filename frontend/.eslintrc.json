{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["next/core-web-vitals", "eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-undef": ["error"]
  }
}
