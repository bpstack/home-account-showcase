### Transacciones

# Login (para obtener token)
# POST {{baseUrl}}/auth/login
# Content-Type: application/json
# {"email":"test@test.com","password":"123456"}

# Obtener cuentas (para account_id)
# GET {{baseUrl}}/accounts
# Authorization: Bearer {{token}}

# Obtener transacciones
GET {{baseUrl}}/transactions?account_id={{account_id}}
Authorization: Bearer {{token}}

# Obtener transacción por ID
GET {{baseUrl}}/transactions/d6ecaef7-b4c6-4224-a94b-cf225759ac8e
Authorization: Bearer {{token}}

# Crear transacción
POST {{baseUrl}}/transactions
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "account_id": "{{account_id}}",
  "date": "2025-01-15",
  "description": "Supermercado Mercadona",
  "amount": 125.50,
  "bank_category": "COMPRAS",
  "bank_subcategory": "ALIMENTACION"
}

# Actualizar transacción
PUT {{baseUrl}}/transactions/d6ecaef7-b4c6-4224-a94b-cf225759ac8e
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "description": "Supermercado Carrefour",
  "amount": 89.99
}

# Eliminar transacción
DELETE {{baseUrl}}/transactions/e81c9a18-2c3e-4aad-bd94-116a9591e7d5
Authorization: Bearer {{token}}

# Resumen por categoría
GET {{baseUrl}}/transactions/summary?account_id={{account_id}}&start_date=2025-01-01&end_date=2025-01-31
Authorization: Bearer {{token}}

# Filtrar por fecha
GET {{baseUrl}}/transactions?account_id={{account_id}}&start_date=2025-01-10&end_date=2025-01-20
Authorization: Bearer {{token}}

# Buscar por descripción
GET {{baseUrl}}/transactions?account_id={{account_id}}&search=Mercadona
Authorization: Bearer {{token}}

# Filtrar por monto
GET {{baseUrl}}/transactions?account_id={{account_id}}&min_amount=50&max_amount=200
Authorization: Bearer {{token}}

# ----------------------------------------
# FILTRO POR TIPO
# ----------------------------------------

# Solo ingresos (amount > 0)
GET {{baseUrl}}/transactions?account_id={{account_id}}&type=income
Authorization: Bearer {{token}}

# Solo gastos (amount < 0)
GET {{baseUrl}}/transactions?account_id={{account_id}}&type=expense
Authorization: Bearer {{token}}

# Todos (equivalente a no enviar type)
GET {{baseUrl}}/transactions?account_id={{account_id}}&type=all
Authorization: Bearer {{token}}

# Filtrar por tipo + fecha
GET {{baseUrl}}/transactions?account_id={{account_id}}&type=expense&start_date=2025-01-01&end_date=2025-01-31
Authorization: Bearer {{token}}

# ----------------------------------------
# FILTRO POR TIPO + OTRAS CATEGORÍAS
# ----------------------------------------

# Solo gastos de una categoría
GET {{baseUrl}}/transactions?account_id={{account_id}}&type=expense&search=Mercadona
Authorization: Bearer {{token}}
